background-opacity = 1.0

font-size = 14
window-decoration = false
#cursor-style = underline
mouse-hide-while-typing = true
window-save-state = always
adjust-cell-height = 10%
#maximize = true

### keybinds ###
keybind = ctrl+alt+a=new_tab
keybind = ctrl+alt+z=close_tab:this
keybind = ctrl+shift+s=new_split:right
keybind = ctrl+shift+d=new_split:down
keybind = ctrl+shift+q=close_surface
keybind = ctrl+shift+arrow_right=goto_split:next
keybind = ctrl+shift+arrow_left=goto_split:previous
keybind = ctrl+shift+r=reset
keybind = ctrl+shift+c=copy_to_clipboard

